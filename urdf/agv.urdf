<?xml version="1.0"?>
<robot name="agv">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50"/> <!-- Reduced for stability -->
      <inertia ixx="7.5" ixy="0.0" ixz="0.0" iyy="7.5" iyz="0.0" izz="12.5"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1> <!-- Reduced friction -->
    <mu2>0.5</mu2>
  </gazebo>

  <!-- Front left wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu> <!-- Reduced friction -->
            <mu2>0.5</mu2>
            <fdir1>0 1 0</fdir1>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>1000000.0</kp> <!-- Reduced for stability -->
            <kd>100.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.016"/>
    </inertial>
  </link>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- Front right wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
            <fdir1>0 1 0</fdir1>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>1000000.0</kp>
            <kd>100.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.016"/>
    </inertial>
  </link>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
            <fdir1>0 1 0</fdir1>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>1000000.0</kp>
            <kd>100.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.016"/>
    </inertial>
  </link>
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
            <fdir1>0 1 0</fdir1>
            <slip1>0.0</slip1>
            <slip2>0.0</slip2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>1000000.0</kp>
            <kd>100.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.016"/>
    </inertial>
  </link>
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- Joints -->
  <joint name="base_to_front_left" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Caster wheel -->
    <limit effort="5" velocity="10"/> <!-- Reduced for stability -->
    <dynamics damping="0.7" friction="0.3"/> <!-- Increased damping -->
  </joint>
  <joint name="base_to_front_right" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Caster wheel -->
    <limit effort="5" velocity="10"/>
    <dynamics damping="0.7" friction="0.3"/>
  </joint>
  <joint name="base_to_rear_left" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Drive axis -->
    <limit lower="-1.5708" upper="1.5708" effort="50" velocity="10"/> <!-- Â±90 degrees -->
    <dynamics damping="0.7" friction="0.3"/>
  </joint>
  <joint name="base_to_rear_right" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Drive axis -->
    <limit lower="-1.5708" upper="1.5708" effort="50" velocity="10"/>
    <dynamics damping="0.7" friction="0.3"/>
  </joint>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/agv</namespace>
        <remapping>odom:=odom</remapping>
        <remapping>cmd_vel:=cmd_vel</remapping>
      </ros>
      <odometry_topic>odom</odometry_topic>
      <command_topic>cmd_vel</command_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <left_joint>base_to_rear_left</left_joint>
      <right_joint>base_to_rear_right</right_joint>
      <wheel_separation>0.9</wheel_separation>
      <wheel_diameter>0.3</wheel_diameter>
      <max_wheel_torque>50.0</max_wheel_torque> <!-- Reduced -->
      <max_wheel_acceleration>5.0</max_wheel_acceleration> <!-- Reduced -->
      <wheel_torque_ratio>1.0</wheel_torque_ratio>
      <update_rate>50.0</update_rate> <!-- Reduced for stability -->
    </plugin>
  </gazebo>
</robot>