<?xml version="1.0"?>
<robot name="agv">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="30"/> <!-- Reduced for stability -->
      <inertia ixx="3.0" ixy="0.0" ixz="0.0" iyy="3.0" iyz="0.0" izz="6.0"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>1.0</mu1> <!-- High friction -->
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Rear axle (new link to constrain wheels) -->
  <link name="rear_axle">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Front left wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu> <!-- High friction -->
            <mu2>1.0</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>4000000.0</kp> <!-- Increased for stability -->
            <kd>400.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.2"/> <!-- Reduced for stability -->
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Front right wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>4000000.0</kp>
            <kd>400.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>4000000.0</kp>
            <kd>400.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>4000000.0</kp>
            <kd>400.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Joints -->
  <joint name="base_to_rear_axle" type="fixed">
    <parent link="base_link"/>
    <child link="rear_axle"/>
    <origin xyz="-0.75 0 -0.25" rpy="0 0 0"/>
  </joint>
  <joint name="rear_axle_to_left_wheel" type="continuous">
    <parent link="rear_axle"/>
    <child link="rear_left_wheel"/>
    <origin xyz="0 0.45 0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="200" velocity="20"/> <!-- Adjusted for stability -->
    <dynamics damping="3.0" friction="1.5"/> <!-- High damping -->
  </joint>
  <joint name="rear_axle_to_right_wheel" type="continuous">
    <parent link="rear_axle"/>
    <child link="rear_right_wheel"/>
    <origin xyz="0 -0.45 0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="200" velocity="20"/> <!-- Synchronized -->
    <dynamics damping="3.0" friction="1.5"/> <!-- Synchronized -->
  </joint>
  <joint name="base_to_front_left" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="100" velocity="20"/>
    <dynamics damping="3.0" friction="1.5"/> <!-- High damping -->
  </joint>
  <joint name="base_to_front_right" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="100" velocity="20"/>
    <dynamics damping="3.0" friction="1.5"/>
  </joint>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>odom:=odom</remapping>
        <remapping>cmd_vel:=cmd_vel</remapping>
      </ros>
      <odometry_topic>odom</odometry_topic>
      <command_topic>cmd_vel</command_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <left_joint>rear_axle_to_left_wheel</left_joint>
      <right_joint>rear_axle_to_right_wheel</right_joint>
      <wheel_separation>0.9</wheel_separation> <!-- Matches URDF -->
      <wheel_diameter>0.3</wheel_diameter> <!-- Matches URDF -->
      <max_wheel_torque>200.0</max_wheel_torque> <!-- Reduced -->
      <max_wheel_acceleration>20.0</max_wheel_acceleration> <!-- Reduced -->
      <update_rate>50.0</update_rate> <!-- Reduced for stability -->
    </plugin>
  </gazebo>
</robot>