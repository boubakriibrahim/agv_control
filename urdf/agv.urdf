<?xml version="1.0"?>
<robot name="agv">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="200"/>
      <inertia ixx="120" ixy="0" ixz="0" iyy="120" iyz="0" izz="120"/>
    </inertial>
  </link>

  <!-- Front left wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Front right wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Front left steering link -->
  <link name="front_left_steering">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front right steering link -->
  <link name="front_right_steering">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="base_to_front_left_steering" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steering"/>
    <origin xyz="0.75 0.45 -0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.9" upper="0.9"/>
  </joint>
  <joint name="front_left_steering_to_wheel" type="continuous">
    <parent link="front_left_steering"/>
    <child link="front_left_wheel"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="base_to_front_right_steering" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steering"/>
    <origin xyz="0.75 -0.45 -0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.9" upper="0.9"/>
  </joint>
  <joint name="front_right_steering_to_wheel" type="continuous">
    <parent link="front_right_steering"/>
    <child link="front_right_wheel"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="base_to_rear_left" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="base_to_rear_right" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin name="ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <odometry_topic>odom</odometry_topic>
      <command_topic>cmd_vel</command_topic>
      <front_left_steering_joint>base_to_front_left_steering</front_left_steering_joint>
      <front_right_steering_joint>base_to_front_right_steering</front_right_steering_joint>
      <rear_left_drive_joint>base_to_rear_left</rear_left_drive_joint>
      <rear_right_drive_joint>base_to_rear_right</rear_right_drive_joint>
      <wheelbase>1.5</wheelbase>
      <track>0.8</track>
      <wheel_diameter>0.3</wheel_diameter>
      <max_steering_angle>0.9</max_steering_angle>
      <max_speed>3.0</max_speed>
      <update_rate>100</update_rate>
    </plugin>
  </gazebo>
</robot>