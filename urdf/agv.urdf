<?xml version="1.0"?>
<robot name="agv">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 0.8 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50"/> <!-- Reduced for stability -->
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="5.0" iyz="0.0" izz="10.0"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.8</mu1> <!-- Increased for stability -->
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Front left wheel -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu> <!-- Increased for stability -->
            <mu2>0.8</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>3000000.0</kp> <!-- Increased for tighter contact -->
            <kd>300.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.3"/> <!-- Reduced for stability -->
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Front right wheel -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.8</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>3000000.0</kp>
            <kd>300.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Rear left wheel -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.8</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>3000000.0</kp>
            <kd>300.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Rear right wheel -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.8</mu2>
          </ode>
        </friction>
        <contact>
          <ode>
            <kp>3000000.0</kp>
            <kd>300.0</kd>
          </ode>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Joints -->
  <joint name="base_to_front_left" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="100" velocity="30"/> <!-- Adjusted for stability -->
    <dynamics damping="2.0" friction="1.0"/> <!-- Increased to prevent wobble -->
  </joint>
  <joint name="base_to_front_right" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="100" velocity="30"/>
    <dynamics damping="2.0" friction="1.0"/>
  </joint>
  <joint name="base_to_rear_left" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.75 0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="300" velocity="30"/> <!-- Increased for high speed -->
    <dynamics damping="1.5" friction="0.8"/> <!-- Synchronized -->
  </joint>
  <joint name="base_to_rear_right" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.75 -0.45 -0.25" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/> <!-- Y-axis rotation -->
    <limit effort="300" velocity="30"/> <!-- Synchronized -->
    <dynamics damping="1.5" friction="0.8"/> <!-- Synchronized -->
  </joint>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>odom:=odom</remapping>
        <remapping>cmd_vel:=cmd_vel</remapping>
      </ros>
      <odometry_topic>odom</odometry_topic>
      <command_topic>cmd_vel</command_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <left_joint>base_to_rear_left</left_joint>
      <right_joint>base_to_rear_right</right_joint>
      <wheel_separation>0.9</wheel_separation> <!-- Matches URDF -->
      <wheel_diameter>0.3</wheel_diameter> <!-- Matches URDF -->
      <max_wheel_torque>300.0</max_wheel_torque> <!-- Adjusted for speed/stability -->
      <max_wheel_acceleration>30.0</max_wheel_acceleration> <!-- Adjusted for speed/stability -->
      <update_rate>100.0</update_rate> <!-- Reduced for stability -->
    </plugin>
  </gazebo>
</robot>